
<B1@Button>:
    font_size: dp(23)
    size_hint: 0.6, 0.05
    background_normal: "pics/b_breit.png"
    background_down: "pics/b_breit_d.png"

<B2@Button>:
    font_size: dp(23)
    size_hint: 0.4, 0.05
    background_normal: "pics/b_breit.png"
    background_down: "pics/b_breit_d.png"



<MainView>

    FloatLayout:
        canvas.before:
            Rectangle:
                source: "pics/rolle.png"
                size: root.width, root.height
                pos: self.pos
        Label:
            font_size: dp(100)
            size_hint: 0.5,0.1
            pos_hint: {"x":0.25, "y":0.8}
        B1:
            text: "Start"
            color: (0,0,0,1)
            pos_hint: {"x":0.2, "y":0.025}
            on_release: app.change_view("viewone", "left")



<ViewOne>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "pics/a_bg.png"
                size: root.width, root.height
                pos: self.pos
        Label:
            text: "ViewOne"
            color: 0.9, 0.9, 0.9
            size_hint: 0.5,0.1
            pos_hint: {"x":0.25, "y":0.8}

        B2:
            text: "zurück"
            color: (0,0,0,1)
            pos_hint: {"x":0.05, "y":0.025}
            on_release: app.change_view("mainview", "right")
        B2:
            text: "weiter"
            color: (0,0,0,1)
            pos_hint: {"x":0.55, "y":0.025}
            on_release: app.change_view("viewtwo", "left")

<ViewTwo>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "pics/a_bg.png"
                size: root.width, root.height
                pos: self.pos
        Label:
            text: "ViewTwo"
            color: 0.9, 0.9, 0.9
            size_hint: 0.5,0.1
            pos_hint: {"x":0.25, "y":0.8}
        B2:
            text: "zurück"
            color: (0,0,0,1)
            pos_hint: {"x":0.3, "y":0.025}
            on_release: app.change_view("viewone", "right")

